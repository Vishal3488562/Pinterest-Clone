<% include ./partials/header.ejs %>

<div class="profile w-full min-h-screen bg-slate-100 text-gray-800 pt-1 px-10 py-5 font-gilroy">
    <h1 class="text-xl mt-20">Create a new post.</h1>
    <hr class="mt-3">
    <form action="/uploadpost" method="post" enctype="multipart/form-data">
        <div class="flex items-center">
            <label for="file-input" class="block w-28 px-3 py-2 rounded-md mt-3 bg-red-700 hover:bg-red-800 transition duration-300 ease-in-out cursor-pointer text-white">
              Upload File
            </label>
            <input type="file" id="file-input" class="hidden" name="postimage" onchange="displayFileName(this)">
            <span id="file-name" class="ml-3"></span>
          </div>
          
        <input class="block w-1/3 px-3 py-2 border-2 rounded-md mt-3" type="text" placeholder="Title" name="title">
        <textarea class="block w-1/3 px-3 py-2 h-60 resize-none border-2 rounded-md mt-3" type="text" name="description" placeholder="Description"></textarea>
        <input class="block w-1/3 px-3 py-2 rounded-md mt-3 bg-red-700 hover:bg-red-800 transition-bg duration-300 ease-in-out cursor-pointer text-white" type="submit" value="Add new post">
    </form>
</div>

<script>
    function displayFileName(input) {
      var fileName = input.files[0].name;
      document.getElementById('file-name').innerText = fileName;
    }
  </script>
